{% if c_figure_permalink_url %}
	<a href="{{ c_figure_permalink_url }}" class="c-figure__link {{ c_figure_link_classes }}">
{% endif %}

{% if c_figure_screen_reader_text %}
	<span class="a-screen-reader-only">{{ c_figure_screen_reader_text }}</span>
{% endif %}

{% if has_toaster %}
	<figure class="c-figure {{ modifier_class }} {{ c_figure_classes }}" data-toaster-activate-trigger>
{% else %}
	<figure class="c-figure {{ modifier_class }} {{ c_figure_classes }}" style="{{ c_figure_width_attr }}">
{% endif %}

{% if c_figure_crop_class %}
	<div class="{{ c_figure_crop_class }}">
{% endif %}

{% if c_figure_image_markup %}
	{{ c_figure_image_markup }}
{% else %}
	<img class="c-figure__image {{ c_figure_image_classes }}" src="{{ c_figure_placeholder_image_url }}" data-lazy-src="{{ c_figure_image_url }}" alt="{{ c_figure_alt_attr }}">
{% endif %}

{% if c_button %}
	{% include "../c-button/c-button.twig" with c_button %}
{% endif %}

{% if c_figure_crop_class %}
	</div>
{% endif %}

{# Backwards Compatibility #}
{% if c_figure_caption_text %}
	<figcaption class="c-figure__caption {{ c_figure_caption_classes }}">{{ c_figure_caption_text }}</figcaption>
{% endif %}

{% if c_figure_show_figcaption %}
	<figcaption class="c-figure__caption {{ c_figure_figcaption_classes }}">
		{% if c_figure_caption_markup %}
			<span class="{{ c_figure_caption_classes }}">{{ c_figure_caption_markup }}</span>
		{% endif %}
		{% if c_figure_credit_text %}
			<span class="{{ c_figure_credit_classes }}">{{ c_figure_credit_text }}</span>
		{% endif %}
	</figcaption>
{% endif %}

{% if c_play_badge %}
	{% include "../c-play-badge/c-play-badge.twig" with c_play_badge %}
{% endif %}

</figure>

{% if c_figure_permalink_url %}
	</a>
{% endif %}
