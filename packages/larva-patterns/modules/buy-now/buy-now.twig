{% if c_lazy_image %}
	<div class="{{ buy_now.div_container_classes }}">
		<hr class="{{ buy_now.hr_top_classes }}">

		<div class="{{ buy_now.img_container_classes }}">
			{% include "@larva/components/c-lazy-image/c-lazy-image.twig" with c_lazy_image %}
		</div>

		{% include "@larva/components/c-button/c-button.twig" with button %}

		<hr class="{{ buy_now.hr_bottom_classes }}">
	</div>
{% else %}
	<p class="{{ buy_now.p_container_classes }}">
		{% include "@larva/components/c-button/c-button.twig" with button %}
	</p>
{% endif %}