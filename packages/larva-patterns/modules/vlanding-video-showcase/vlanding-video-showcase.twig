<section data-video-showcase="">
	<div class="lrv-a-wrapper lrv-a-grid lrv-a-cols3@tablet" data-video-showcase>
		<div class="lrv-a-grid-item lrv-a-span2@tablet">
			{% include "@larva/modules/vlanding-video-card/vlanding-video-card.twig" with vlanding_video_card %}
		</div>
		<div class="lrv-a-grid-item lrv-u-margin-tb-auto lrv-u-margin-tb-auto">
			{% include "@larva/components/c-title/c-title.twig" with c_title %}
			{% include "@larva/components/c-tagline/c-tagline.twig" with c_tagline %}
			{#{% include "../social-share/social-share.html" with social_share %}#}
		</div>
	</div>

	<div class="lrv-a-wrapper lrv-u-padding-t-1" data-slider>

		{% include "@larva/components/c-heading/c-heading.twig" with c_heading %}

		<div class="latest-videos // lrv-u-overflow-hidden lrv-a-glue-parent">
			<ul class="lrv-a-unstyle-list lrv-a-scrollable-grid@desktop-max" data-slider-track>
				{% for item in latest_videos %}
					<li data-slider-item>
						{% include "@larva/modules/vlanding-video-card/vlanding-video-card.twig" with item %}
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>

</section>
