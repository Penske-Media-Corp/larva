{% if o_video_card_permalink_url %}
<a href="{{ o_video_card_permalink_url }}" class="o-video-card__link" data-video-showcase-trigger="{{ o_video_card_link_showcase_trigger_data_attr }}" data-video-showcase-type="{{ o_video_card_link_showcase_type_data_attr }}" data-video-showcase-dek="{{ o_video_card_link_showcase_dek_data_attr }}" data-video-showcase-title="{{ o_video_card_link_showcase_title_data_attr }}" data-video-showcase-permalink="{{ o_video_card_link_showcase_permalink_data_url }}">
	{% endif %}

	<article class="o-video-card {{ modifier_class }} {{ o_video_card_classes }}" data-video-showcase-player>

		{% if o_video_card_crop_class %}
		<div class="{{ o_video_card_crop_class }}" data-video-showcase-active-text="{{ o_video_card_crop_data_attr }}">
			{% endif %}

			{% if c_lazy_image %}
				{% include "@larva/components/c-lazy-image/c-lazy-image.twig" with c_lazy_image %}
			{% endif %}

			{# Do we need this #}
			{% if c_play_badge %}
				{#{% include "../../04-components/c-play-badge/c-play-badge.twig" with c_play_badge %}#}
			{% endif %}

			{% if o_video_card_is_player %}
				<iframe hidden frameborder="0" data-video-showcase-iframe></iframe>
				<div hidden id="jwplayerContainer" data-video-showcase-jwplayer></div>
			{% endif %}

			{% if o_video_card_crop_class %}
		</div>
		{% endif %}

		{% if c_span %}
			{% include "@larva/components/c-span/c-span.twig" with c_span %}
		{% endif %}

		{% if c_title %}
			{% include "@larva/components/c-title/c-title.twig" with c_title %}
		{% endif %}

	</article>

	{% if o_video_card_permalink_url %}
</a>
{% endif %}

{% if o_video_card_social_share_markup %}
	<div class="lrv-a-hidden" data-video-showcase-trigger-social-share>
		{{ o_video_card_social_share_markup }}
	</div>
{% endif %}

