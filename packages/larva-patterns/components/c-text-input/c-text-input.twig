{# Properties intentionally not prefixed with module name to avoid twig-to-php parser issues. #}
<label class="c-text-input" for="{{ id_attr }}">
	<span class="{{ label_class }}">{{ label_text }}</span>
	<input
		type="text"
		class="{{ input_class }}"
		name="{{ input_name }}"
		placeholder="{{ input_placeholder_attr }}"
		aria-invalid="{{ input_aria_invalid_attr }}"
		data-error="{{ input_error_attr }}"
		size="{{ input_size_attr }}"
		maxlength="{{ input_maxlength_attr }}"
	/>
</label>
