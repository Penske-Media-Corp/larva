<label class="c-text-input" for="{{ c_text_input_id }}">
	<span class="{{ c_text_input_label_classes }}">{{ c_text_input_label_text }}</span>
	<input
		type="text"
		class="{{ c_text_input_classes }}"
		name="{{ c_text_input_name }}"
		placeholder="{{ c_text_input_placeholder }}"
		aria-invalid="{{ c_text_input_aria_invalid }}"
		data-error="{{ c_text_input_error }}"
		size="{{ c_text_input_size }}"
		maxlength="{{ c_text_input_maxlength }}"
	/>
</label>
