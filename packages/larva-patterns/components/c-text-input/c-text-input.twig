<label class="c-text-input" for="{{ c_text_input_id_attr }}">
	<span class="{{ c_text_input_label_classes }}">{{ c_text_input_label_text }}</span>
	<input
		type="text"
		class="{{ c_text_input_classes }}"
		name="{{ c_text_input_name_attr }}"
		placeholder="{{ c_text_input_placeholder_attr }}"
		aria-invalid="{{ c_text_input_aria_invalid_attr }}"
		data-error="{{ c_text_input_error_attr }}"
		size="{{ c_text_input_size_attr }}"
		maxlength="{{ c_text_input_maxlength_attr }}"
	/>
</label>
