<button class="c-button {{ modifier_class }} {{ c_button_classes }}" type="{{ c_button_type_attr }}">

{% if c_button_url %}
	<a class="c-button__inner {{ modifier_class }} {{ c_button_inner_classes }}" href="{{ c_button_link_url }}">
{% else %}
	<span class="c-button__inner {{ c_button_inner_classes }}">
{% endif %}

	{{ c_button_text }}

{% if c_button_url %}
	</a>
{% else %}
	</span>
{% endif %}

</button>